{
  "name": "sass-indented",
  "displayName": "Sass",
  "description": "Indented Sass syntax highlighting, autocomplete & snippets",
  "version": "1.5.9",
  "icon": "resources/images/sass-logo-seal.png",
  "publisher": "syler",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheRealSyler/vscode-sass-indented"
  },
  "bugs": "https://github.com/TheRealSyler/vscode-sass-indented/issues",
  "engines": {
    "vscode": "^1.30.0"
  },
  "activationEvents": [
    "onLanguage:sass",
    "onView:colorPallet"
  ],
  "main": "./out/extension",
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Sass (Indented)",
      "properties": {
        "sass.disableAutoIndent": {
          "type": "boolean",
          "default": false,
          "description": "Stop the extension from automatically indenting when pressing Enter"
        },
        "sass.disableUnitCompletion": {
          "type": "boolean",
          "default": true,
          "description": "adds units to the intellisense completions if false."
        },
        "sass.disableEmmet": {
          "type": "boolean",
          "default": true,
          "description": "disables emmet in the workspace settings to enable emmet remove sass from emmet.excludeLanguages, and disable this option."
        },
        "sass.format.enabled": {
          "type": "boolean",
          "default": false,
          "description": "disables the sass formatter."
        },
        "sass.format.deleteWhitespace": {
          "type": "boolean",
          "default": true,
          "description": "removes trailing whitespace."
        },
        "sass.format.deleteEmptyRows": {
          "type": "boolean",
          "default": true,
          "description": "removes empty rows."
        },
        "sass.format.deleteCompact": {
          "type": "boolean",
          "default": true,
          "description": "also removes empty rows that are near a property."
        },
        "sass.format.debug": {
          "type": "boolean",
          "default": false,
          "description": "enables debug mode."
        },
        "sass.andStared": {
          "type": "array",
          "default": [
            "active",
            "focus",
            "hover",
            "nth-child"
          ],
          "description": "item in this array will be at the top of the completion list (only for item that show after the & sign)"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sass",
          "title": "Sass",
          "icon": "resources/images/Sass_Logo_Color.svg"
        }
      ]
    },
    "views": {
      "sass": [
        {
          "id": "colorPallet",
          "name": "Color Pallet"
        }
      ]
    },
    "commands": [
      {
        "command": "colorPallet.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        },
        "category": "Color Pallet"
      },
      {
        "command": "colorPallet.addToFile",
        "title": "Add to File",
        "category": "Color Pallet"
      },
      {
        "command": "colorPallet.addFolderItem",
        "title": "Add item",
        "icon": {
          "light": "resources/matIo/light/baseline-add-24px.svg",
          "dark": "resources/matIo/dark/baseline-add-24px.svg"
        },
        "category": "Color Pallet",
        "enablement": "view == colorPallet"
      },
      {
        "command": "colorPallet.addFolder",
        "title": "Add Folder",
        "icon": {
          "light": "resources/matIo/light/baseline-add-24px.svg",
          "dark": "resources/matIo/dark/baseline-add-24px.svg"
        },
        "category": "Color Pallet",
        "enablement": "view == colorPallet"
      },
      {
        "command": "colorPallet.editEntry",
        "title": "Edit",
        "icon": {
          "light": "resources/light/edit.svg",
          "dark": "resources/dark/edit.svg"
        },
        "category": "Color Pallet",
        "enablement": "view == colorPallet"
      },
      {
        "command": "colorPallet.deleteEntry",
        "title": "Delete",
        "category": "Color Pallet",
        "enablement": "view == colorPallet"
      },
      {
        "command": "colorPallet.scanColors",
        "title": "Add colors to Pallet",
        "category": "Color Pallet",
        "enablement": "resourceExtname == .sass"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "colorPallet.refreshEntry",
          "when": "view == colorPallet",
          "group": "navigation"
        },
        {
          "command": "colorPallet.addFolder",
          "when": "view == colorPallet",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "colorPallet.editEntry",
          "when": "view == colorPallet && viewItem == folder",
          "group": "inline"
        },
        {
          "command": "colorPallet.editEntry",
          "when": "view == colorPallet && viewItem == folder"
        },
        {
          "command": "colorPallet.addFolderItem",
          "when": "view == colorPallet && viewItem == folder",
          "group": "inline"
        },
        {
          "command": "colorPallet.deleteEntry",
          "when": "view == colorPallet"
        },
        {
          "command": "colorPallet.addToFile",
          "when": "view == colorPallet"
        }
      ],
      "editor/context": [
        {
          "command": "colorPallet.scanColors",
          "group": "navigation",
          "when": "resourceExtname == .sass"
        },
        {
          "command": "colorPallet.addToFile",
          "group": "navigation",
          "when": "resourceExtname == .sass"
        }
      ]
    },
    "languages": [
      {
        "id": "sass",
        "aliases": [
          "Sass",
          "sass-indented"
        ],
        "extensions": [
          ".sass",
          ".sass.erb"
        ],
        "configuration": "./sass.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sass",
        "scopeName": "source.sass",
        "path": "./syntaxes/sass.tmLanguage"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "lint": "tslint --fix -c tslint.json 'src/**/*.ts'"
  },
  "devDependencies": {
    "typescript": "^3.2.2",
    "vscode": "^1.1.26",
    "tslint": "^5.8.0",
    "@types/node": "^8.10.25"
  }
}
